<%= form_with model: board, local: true do |f|%>
<%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :title, class: 'board_title' %>
        <%= f.text_field :title, class: 'form-control', id: 'board_title'%>
      </div>
      <div class="form-group">
        <%= f.label :body, class: 'board_body' %>
        <%= f.text_area :body, class: 'form-control', id: 'board_body', rows: "10" %>
      </div>
      <div class="form-group">
        <%= f.label :board_image %>
        <%= f.hidden_field :board_image_cache %>
      </div>
      <div class="form-group">
        <%= f.file_field :board_image, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
        <%= image_tag board.board_image.url,
                  class: 'rounded-circle',
                  id: 'preview',
                  size: '100x100' %>
      </div>
        <%= f.submit class: 'btn btn-primary' %>
        <% end %>