<%= content_for(:title, t('.title')) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('boards.show.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
            <%= image_tag @board.board_image.url, class: "card-img-top img-fluid" %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @board.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @board.user.decorate.full_name %></li>
                <li class="list-inline-item"><%= @board.created_at %></li>
              </ul>
            </div>
          </div>
          <p><%= @board.body %></p>
        </div>
      </article>
    </div>
  </div>
  <!-- コメントフォーム -->
  <%= render partial: 'comments/form', locals: { comment: @comment, board: @board} %>
  <!-- コメントエリア -->
  <%= render partial: 'comments/comments', locals: { comments: @comments } %>
</div>
</div>